#!/usr/bin/python3 -B

import sys
from config import *
from graph import *
from component import *

print('Database directory: ', GRDB_DIR)

while True:
	line = input(PROMPT)
	argv = line.split()

	if len(argv) == 0:
		continue

	if argv[0] == 'quit':
		sys.exit(0)

	if argv[0] == 'graph' or argv[0] == 'g':
		graphs_print()
		continue

	if argv[0] == 'component' or argv[0] == 'c':
		components_print()
		continue

	print(len(argv))
	print(argv)
